<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_attendance_tree_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.inherit.tree</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="message_in" />
                <field name="check_in_url" widget="url" />
                <field name="message_out" />
                <field name="check_out_url" widget="url" />
            </xpath>
        </field>
    </record>
    <record id="hr_attendance_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.inherit.form</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group string="Employee Geolocation">
                    <group string="Check-in" colspan="4">
                        <field name="message_in" />
                        <field name="in_latitude" />
                        <field name="in_longitude" />
                        <field name="check_in_url" widget="url" />
                    </group>
                    <group string="Check-out" colspan="4">
                        <field name="message_out" />
                        <field name="out_latitude" />
                        <field name="out_longitude" />
                        <field name="check_out_url" widget="url" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="action_attendance_web_page" model="ir.actions.act_url">
        <field name="name">Attendance Web Page</field>
        <field name="type">ir.actions.act_url</field>
        <field name="target">self</field>
        <field name="url">/attendance</field>
    </record>

    <menuitem id="hr_attendance.menu_hr_attendance_attendances_overview" name="Attendances" parent="hr_attendance.menu_hr_attendance_root" sequence="1" groups="hr_attendance.group_hr_attendance" action="hr_attendance.hr_attendance_action_overview"/>
    <menuitem id="hr_attendance.menu_hr_attendance_view_attendances" name="Attendances" parent="hr_attendance.menu_hr_attendance_root" sequence="1" groups="hr_attendance.group_hr_attendance_user" action="hr_attendance.hr_attendance_action"/>
    <menuitem id="hr_attendance.menu_hr_attendance_my_attendances" name="Check In / Check Out" parent="hr_attendance.menu_hr_attendance_root" sequence="2" groups="hr_attendance.group_hr_attendance" action="sh_hr_attendance_geolocation.action_attendance_web_page"/>
</odoo>
