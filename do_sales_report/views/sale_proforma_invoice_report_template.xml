<odoo>

	<template id="report_project_sales_proforma_invoice_document">
        <t t-call="do_sales_report.external_layout_mw_sales_report">
        	<style>
                body{   
                    font-size:22px!important;
                    counter-reset: Serial;
                }
                .style-table-invoice {  
                    border: 1px black solid;
                    border-top:none;
                    width: 100%;
                    border-bottom:none;
                }
                .style-sub-table-invoice {
                    position: relative;
                    <!-- height: fit-content;
                    padding:0px !important; --> 
                    <!-- width: 30%; -->
                    <!-- left: 55rem; -->
                }
                .style-acc-table-invoice {
                    border: 1px black solid;
                    <!-- border-top:none; -->
                    width: 100%;
                }
            </style>
        	<t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
        	<div class="page" style="">
        		<div class="row" style="border: 2px solid;">
                    <div class="col-md-12 text-center">
                        <h2 style=""> <strong>Proforma Invoice</strong></h2>   
                    </div>
                </div>				  
                
                <div class="row" style="border: 1px solid;border-top:none;">
                    <div class="col-md-6 text-left" style="padding-left: 2rem;padding-top: 2rem;">
                        <strong><span t-esc="doc.current_company_name.name"/></strong><br/>

                        <t t-if="doc.current_company_name.street and doc.current_company_name.street2">
                                <span t-esc="doc.current_company_name.street"/>, <span t-esc="doc.current_company_name.street2"/> <br/>
                        </t>
                        <t t-elif="doc.current_company_name.street">
                                <span t-esc="doc.current_company_name.street"/> <br/>
                        </t>
                        <t t-elif="doc.current_company_name.street2">
                                <span t-esc="doc.current_company_name.street2"/><br/> 
                        </t>
                        <t t-if="doc.current_company_name.city and doc.current_company_name.state_id and doc.current_company_name.country_id">
                                <span t-esc="doc.current_company_name.city"/>, <span t-esc="doc.current_company_name.state_id.name"/> <span t-esc="doc.current_company_name.zip"/>, <span t-esc="doc.current_company_name.country_id.name"/> <br/>
                        </t>
                        <t t-elif="doc.current_company_name.city and doc.current_company_name.state_id">
                                <span t-esc="doc.current_company_name.city"/>, <span t-esc="doc.current_company_name.state_id.name"/> <span t-esc="doc.current_company_name.zip"/> <br/>
                        </t>
                        <t t-elif="doc.current_company_name.city and doc.current_company_name.country_id">
                                <span t-esc="doc.current_company_name.city"/> <span t-esc="doc.current_company_name.zip"/>, <span t-esc="doc.current_company_name.country_id.name"/><br/>
                        </t>
                        <t t-elif="doc.current_company_name.state_id and doc.current_company_name.country_id">
                                <span t-esc="doc.current_company_name.state_id"/> <span t-esc="doc.current_company_name.zip"/>, <span t-esc="doc.current_company_name.country_id.name"/><br/>
                        </t>
                        <span>Phone: <span t-esc="doc.current_company_name.phone"/></span>
                    </div>
                    <div class="col-6">
                        <div style="position:relative;right:17rem;top:3rem;">
                            <span style="font-weight: 700;">Date:</span> 
                            <span t-esc="doc.date_order" t-options='{"widget": "date"}'/>
                            <br/>
                            <span style="font-weight: 700;">Quote No.</span> 
                            <span t-esc="doc.name"/>
                        </div>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;height:1.5rem;">
                </div>

                <div class="row" style="border: 1px solid;border-top:none;border-bottom:none;">
                    <div class="col-md-12 text-left" style="">
                        <span> <strong>Bill To</strong></span>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;border-bottom:none;">
                    <div class="col-6">
                        <span style="margin-left: 2rem;font-weight:700;" t-esc="doc.partner_id.name"/>
                    </div>
                    <div class="col-6">
                        <div style="margin-left:12rem;">
                            <span style="font-weight:700;">Contact:</span>
                            <span t-esc="doc.partner_id.name"/>
                        </div>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;border-bottom:none;">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <div style="margin-left:12rem;">
                            <span style="font-weight:700;">Phone Number:</span>
                            <span t-esc="doc.partner_id.phone"/>
                        </div>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-bottom:none;padding:2rem;">
                    <div class="col-6">
                        <span style="margin-left: 2rem;font-weight:700;">
                            Credit Terms:
                        </span>
                        <span style="margin-left:1rem;" t-esc="doc.payment_term_id.name" />
                    </div>
                </div>

                <div class="row" style="border: 1px solid;padding:2rem;">
                    <div class="col-12">
                        <span style="margin-left: 2rem;font-weight:700;">
                            Payment:
                        </span>
                        <span style="margin-left:2rem;" t-esc="doc.payment" />
                    </div>
                </div>

                <t t-set="sno" t-value="1" />
                <table class="table table-sm o_main_table table-bordered" style="border-color: black;">
                	<thead style="display: table-row-group">
                		<tr>
                        	<th name="th_no" class="text-center"><span>No.</span></th>
                            <th name="th_description" class="text-center"><span>DESCRIPTION</span></th>
                            <th name="th_quantity" class="text-center"><span>QTY</span></th>
                            <th name="th_priceunit" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>UNIT PRICE</span></th>
                            <th name="th_subtotal" class="text-center">
                                <span groups="account.group_show_line_subtotals_tax_excluded">TOTAL</span>
                                <span groups="account.group_show_line_subtotals_tax_included">TOTAL</span>
                            </th>
	                    </tr>
	                </thead>
	                <tbody>
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-foreach="doc.order_line" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td class="text-center" name="td_no"><span t-esc="sno"/><t t-set="sno" t-value="sno+1"/></td>
                                    <td class="text-center" name="td_name"><span t-field="line.name"/></td>
                                    <td name="td_quantity" class="text-center">
                                        <span t-field="line.product_uom_qty"/>
                                        <span t-field="line.product_uom"/>
                                    </td>
                                    <td name="td_priceunit" class="text-center">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="not line.is_downpayment" name="td_subtotal" class="text-center o_price_total">
                                        <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-elif="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99" class="td-do-it text-center">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-elif="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99" class="td-do-it text-center">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                            <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section') and not line.is_downpayment">
                                <tr class="is-subtotal text-center">
                                    <td name="td_section_subtotal" colspan="99" class="td-do-it text-center">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                          t-out="current_subtotal"
                                          t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
	            </table>

	            <div class="" style="border: 1px solid black;border-top:none;position:relative;bottom:1rem;height:inherit;">

                    <table class="table table-borderless style-sub-table-invoice">
                         
                        <tr class="">
                            <td></td>
                            <td></td>
                            <td></td>      
                            <td class="text-end" style="font-weight:700;color:black;">SUBTOTAL</td>
                            <td class="text-center" style="border-top: none  !important;width:20%;">
                                <span class="" t-field="doc.amount_untaxed"/>
                            </td>
                        </tr>
                        <t t-set="tax_totals" t-value="doc.tax_totals"/>
                        <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                            <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                                <tr>
                                    <t t-if="tax_totals['display_tax_base']">
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td class="text-end" style="font-weight:700;color:black;">
                                            <span t-esc="amount_by_group['tax_group_name']"/>
                                            <span class="text-nowrap"> on
                                                <t t-esc="amount_by_group['formatted_tax_group_base_amount']"/>
                                            </span>
                                        </td>
                                        <td class="text-center" style="border-top: none  !important;">
                                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td class="text-end" style="font-weight:700;color:black;"><span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/></td>
                                        <td class="text-center" style="border-top: none  !important;">
                                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']" />
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </t>
                        <tr class="">
                            <td></td>
                            <td></td>
                            <td></td>
                            <td class="text-end" style="font-weight:700;color:black;">TOTAL</td>
                            <td class="text-center" style="border-top: none  !important;">
                                <span class="" t-field="doc.amount_total"/>
                            </td>
                        </tr>
                    </table>

                    <div class="row" style="position: relative;bottom: 5.5rem;">
                        <div class="col-6">
                            <span style="margin-left: 25rem;">
                                <strong>Currency:</strong>
                            </span>
                            <strong><span t-esc="doc.current_company_name.currency_id.name"/></strong>
                        </div>
                    </div>

                    <div class="row" style="border: 1px solid;border:none;position:relative;bottom:2rem;">
                        <div class="col-5">
                            <span style="margin-left: 4rem;font-weight:700;">
                                TAX ID:
                            </span>
                            <span style="margin-left: 1rem;font-weight:700;" t-esc="doc.partner_id.vat"/>
                        </div>
                        <div class="col-7">
                            <div style="">
                                <span style="font-weight:700;">Registration No.:</span>
                                <span style="margin-left: 2rem;font-weight:700;" t-esc="doc.name"/>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="position:relative;bottom:0.5rem;">
                        <div class="col-6">
                            <h4 style="font-weight:700;margin-left:1rem;">
                                Bank Accounts Details:
                            </h4>
                        </div>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-bottom:none;position:relative;bottom:1rem;">
                    <div class="col-6">
                        <span style="font-weight:700;">
                            Account Name:
                        </span>
                        <span style="margin-left:1rem;" t-esc="doc.add_account_name" />
                    </div>
                </div>

                <table class="table table-sm o_main_table table-borderless style-acc-table-invoice" style="position:relative;bottom:1rem;" name="invoice_line_table">
                    <thead>
                        <tr>
                            <th name="th_acc_no" class="text-start"><span>Account No.</span></th>
                            <th name="th_curr" class="text-start"><span>Currency</span></th>
                            <th name="th_bank_name" class="text-start"><span>Bank Name</span></th>
                            <th name="th_swift" class="text-start"><span>Swift &amp; IBAN</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                           <td><span t-field="doc.add_account_no"/></td>
                            <td><span t-field="doc.add_currency"/></td>
                            <td><span t-field="doc.add_bank_name"/></td>
                            <td><span t-field="doc.add_iban_swift"/></td>
                        </tr>
                    </tbody>
                </table>
        	</div>
        </t>
    </template>

	<template id="report_project_sales_proforma_invoice">
        <t t-call="web.html_container">
            <t t-set="is_pro_forma" t-value="True"/>
	        <t t-set="docs" t-value="docs.with_context(proforma=True)"/>
	        <t t-foreach="docs" t-as="doc">
                <t t-if="doc.current_company_name.priority_company == 1">    
                    <t t-call="do_sales_report.report_project_sales_proforma_invoice_document" t-lang="doc.partner_id.lang"/>
                </t>
                <t t-else="">
                    <t t-call="sale.report_saleorder_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </t>
    </template>
</odoo>
