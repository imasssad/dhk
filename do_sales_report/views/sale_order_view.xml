<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="sale_order_view_form" model="ir.ui.view">
	    <field name="name">sale.order.form</field>
	    <field name="model">sale.order</field>
	    <field name="inherit_id" ref="sale.view_order_form" />
	    <field name="arch" type="xml">
	    	<xpath expr="//field[@name='payment_term_id']" position="after">
	    		<field name="current_company_name" invisible="1"/>
      		</xpath>
      		<xpath expr="//field[@name='payment_term_id']" position="before">
	    		<field name="project_ref"/>
	    		<field name="contact_person"/>
	    		<field name="show_unit_price" attrs="{'invisible': [('is_esky','=',False)]}"/>
	    		<field name="is_esky" invisible="1"/>
      		</xpath>
      		<xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
      			<field name="part_number"/>
      		</xpath>
      		<page name="other_information" position="inside">
  				<group>
  					<group name="bill_to" string="Bill To">
  						<field name="bill_to_contact"/>
  						<field name="bill_to_email"/>
  						<field name="bill_to_address"/>
  						<field name="bill_to_phone"/>
  					</group>
  					<group name="ship_to" string="Ship To">
  						<field name="ship_to_contact"/>
  						<field name="ship_to_email"/>
  						<field name="ship_to_address"/>
  						<field name="ship_to_phone"/>
  					</group>
  					<group name="other_details" string="Other Details">
  						<field name="requistioner"/>
  						<field name="delivery"/>
  						<field name="payment"/>
  					</group>
  					<group name="bank_details" string="Bank Details">
  						<field name="add_account_name"/>
  						<field name="add_account_no"/>
  						<field name="add_currency"/>
  						<field name="add_bank_name"/>
  						<field name="add_iban_swift"/>
  					</group>
  				</group>
      		</page>
	    </field>
	</record>

	<record id="view_company_form_inherit" model="ir.ui.view">
      <field name="name">res.company.form</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form" />
      <field name="arch" type="xml">
      	<xpath expr="//field[@name='favicon']" position="after">
    		<field name="priority_company" invisible="0"/>
  		</xpath>
      </field>
  	</record>
</odoo>
