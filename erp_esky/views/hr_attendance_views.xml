<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="erp_esky_view_hr_attendance_form_inherited" model="ir.ui.view">
        <field name="name">hr.attendance.form.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_out']" position="before">
                <field name="date_is_checkin" invisible="1"/>
                <field name="date_is_checkout" invisible="1"/>
                <field name="ref_meeting_id" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>