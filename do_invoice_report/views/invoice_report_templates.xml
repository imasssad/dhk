<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="external_layout_standard_mw_invoice_report">
    <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
        <div class="row">
            <div class="col-3 mb4">
                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 90px;" alt="Logo"/>
            </div>
        </div>  
    </div> 
    <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
         t-att-data-oe-lang="o and o.env.context.get('lang')">
      <t t-call="web.address_layout"/>
      <t t-raw="0"/>
    </div>
    <div class="footer o_standard_footer">
        <div class="text-center" style="border-top: 1px solid black;">
            <div t-if="report_type == 'pdf'" class="text-muted">
                Page: <span class="page"/> / <span class="topage"/>
            </div>
        </div>
    </div>  
  </template>

  <template id="external_layout_mw_invoice_report">
    <t t-if="not o" t-set="o" t-value="doc"/>
    <t t-if="not company">
      <!-- Multicompany -->
      <t t-if="company_id">
        <t t-set="company" t-value="company_id"/>
      </t>
      <t t-elif="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id.sudo()"/>
      </t>
      <t t-else="else">
        <t t-set="company" t-value="res_company"/>
      </t>
    </t>
    <t t-call="do_invoice_report.external_layout_standard_mw_invoice_report">
      <t t-raw="0"/>
    </t>
  </template>

    <template id="report_project_invoice_document">
        <t t-call="do_invoice_report.external_layout_mw_invoice_report">
            <style>
                body{
                    font-size:14px!important;
                }
                .style-table-invoice {
                    border: 1px black solid;
                    border-top:none;
                    width: 100%;
                    border-bottom:none;
                }
                .style-sub-table-invoice {
                    position: relative;
                    <!-- width: 57%;
                    left: 47rem; -->
                }
                .style-acc-table-invoice {
                    border: 1px black solid;
                    <!-- border-top:none; -->
                    width: 100%;
                }
            </style>    
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/>
            <div class="page" style="">     
                <!-- <div class="container">
                    <div class="row">
                        <div class="col-md-12">  
                            <img t-att-src="'/do_invoice_report/static/img/logo.jpg'" style="width:26%;position:relative;left:1%;bottom:0.5rem;"/>
                        </div>
                    </div>
                </div> -->

                <div class="row" style="border: 1px solid;">
                    <div class="col-md-12 text-center">
                        <t t-if="o.state == 'posted'">
                            <h2 style=""> <strong>INVOICE</strong></h2>
                        </t>
                        <t t-else="">
                            <h2 style=""> <strong>DRAFT</strong></h2>
                        </t>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;">
                    <div class="col-md-12 text-left" style="padding-left: 2rem;padding-top: 2rem;">
                        <strong><span t-esc="o.current_company_name.name"/></strong><br/>
                        <t t-if="o.current_company_name.street and o.current_company_name.street2">
                                <span t-esc="o.current_company_name.street"/>, <span t-esc="o.current_company_name.street2"/> <br/>
                        </t>
                        <t t-elif="o.current_company_name.street">
                                <span t-esc="o.current_company_name.street"/> <br/>
                        </t>
                        <t t-elif="o.current_company_name.street2">
                                <span t-esc="o.current_company_name.street2"/><br/> 
                        </t>
                        <t t-if="o.current_company_name.city and o.current_company_name.state_id and o.current_company_name.country_id">
                                <span t-esc="o.current_company_name.city"/>, <span t-esc="o.current_company_name.state_id.name"/> <span t-esc="o.current_company_name.zip"/>, <span t-esc="o.current_company_name.country_id.name"/> <br/>
                        </t>
                        <t t-elif="o.current_company_name.city and o.current_company_name.state_id">
                                <span t-esc="o.current_company_name.city"/>, <span t-esc="o.current_company_name.state_id.name"/> <span t-esc="o.current_company_name.zip"/> <br/>
                        </t>
                        <t t-elif="o.current_company_name.city and o.current_company_name.country_id">
                                <span t-esc="o.current_company_name.city"/> <span t-esc="o.current_company_name.zip"/>, <span t-esc="o.current_company_name.country_id.name"/><br/>
                        </t>
                        <t t-elif="o.current_company_name.state_id and o.current_company_name.country_id">
                                <span t-esc="o.current_company_name.state_id"/> <span t-esc="o.current_company_name.zip"/>, <span t-esc="o.current_company_name.country_id.name"/><br/>
                        </t>
                        <span>Phone: <span t-esc="o.current_company_name.phone"/></span>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;height:1.5rem;">
                </div>

                <div class="row" style="border: 1px solid;border-top:none;border-bottom:none;">
                    <div class="col-md-12 text-left" style="">
                        <span> <strong>Bill To</strong></span>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;border-bottom:none;">
                    <div class="col-6">
                        <span style="margin-left: 2rem;font-weight:700;">
                            Issued To:
                        </span>
                        <span style="margin-left: 0.5rem;" t-esc="o.partner_id.name"/>
                    </div>
                    <div class="col-6">
                        <div style="margin-left:10rem;">
                            <span style="font-weight:700;">Invoice No.:</span>
                            <span style="margin-left: 0.5rem;" t-esc="o.name"/>
                        </div>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;border-bottom:none;">
                    <div class="col-6">
                        <span style="margin-left: 2rem;font-weight:700;">
                            Customer TAX ID:
                        </span>
                        <span style="margin-left: 0.5rem;" t-esc="o.partner_id.vat"/>
                    </div>
                    <div class="col-6">
                        <div style="margin-left:10rem;">
                            <span style="font-weight:700;">Invoice Date:</span>
                            <span style="margin-left: 0.5rem;" t-esc="o.invoice_date" t-options='{"widget": "date"}'/>
                        </div>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;border-bottom:none;">
                    <div class="col-6">
                        <span style="margin-left: 2rem;font-weight:700;">
                            Address:
                        </span>
                        <t t-if="o.partner_id.street and o.partner_id.street2">
                            <span style="margin-left: 0.5rem;" t-esc="o.partner_id.street"/>, <span t-esc="o.partner_id.street2"/> <br/>
                        </t>
                        <t t-elif="o.partner_id.street">
                            <span t-esc="o.partner_id.street" style="margin-left: 0.5rem;"/> <br/>
                        </t>
                        <t t-elif="o.partner_id.street2">
                            <span t-esc="o.partner_id.street2" style="margin-left: 0.5rem;"/> <br/>
                        </t>
                        <t t-if="o.partner_id.city and o.partner_id.state_id and o.partner_id.country_id">
                            <span style="margin-left: 6.5rem;" t-esc="o.partner_id.city"/>, <span t-esc="o.partner_id.state_id.name"/> <span t-esc="o.partner_id.zip"/>, <span t-esc="o.partner_id.country_id.name"/>
                        </t>
                        <t t-elif="o.partner_id.city and o.partner_id.state_id">
                            <span style="margin-left: 7rem;" t-esc="o.partner_id.city"/>, <span t-esc="o.partner_id.state_id.name"/> <span t-esc="o.partner_id.zip"/>
                        </t>
                        <t t-elif="o.partner_id.city and o.partner_id.country_id">
                            <span style="margin-left: 7rem;" t-esc="o.partner_id.city"/> <span t-esc="o.partner_id.zip"/>, <span t-esc="o.partner_id.country_id.name"/>
                        </t>
                        <t t-elif="o.partner_id.state_id and o.partner_id.country_id">
                            <span style="margin-left: 7rem;" t-esc="o.partner_id.state_id"/> <span t-esc="o.partner_id.zip"/>, <span t-esc="o.partner_id.country_id.name"/>
                        </t>
                    </div>
                    <div class="col-6">
                        <div style="margin-left:10rem;">
                            <span style="font-weight:700;">PO. NO.</span>
                            <span style="margin-left: 0.5rem;" t-esc="o.add_po_no"/>
                        </div>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;border-bottom:none;">
                    <div class="col-6">
                        <span style="margin-left: 2rem;font-weight:700;">
                            Attention:
                        </span>
                        <span style="margin-left: 0.5rem;" t-esc="o.add_attention"/>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;">
                    <div class="col-6">
                        <span style="margin-left: 2rem;font-weight:700;">
                            E-mail:
                        </span>
                        <span style="margin-left: 0.5rem;" t-esc="o.partner_id.email"/>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;border-bottom:none;padding:2rem;">
                    <div class="col-6">
                        <span style="margin-left: 2rem;font-weight:700;">
                            Credit Terms:
                        </span>
                        <span style="font-weight:700;margin-left:2rem;" t-esc="o.invoice_payment_term_id.name" /> 
                    </div>
                    <div class="col-6">
                        <div style="margin-left:12rem;">
                            <span style="font-weight:700;">Currency:</span>
                            <strong><span t-esc="o.currency_id.name"/></strong>
                        </div>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-top:none;padding-left:2rem;padding-bottom:0.5rem;">
                    <div class="col-12">
                        <span style="margin-left: 2rem;font-weight:700;">
                            Payment:
                        </span>
                        <span style="font-weight:700;margin-left:2rem;" t-esc="o.add_payment" /> 
                    </div>
                </div>


                <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                <t t-set="sno" t-value="1" />

                <table class="table table-sm o_main_table table-bordered" name="invoice_line_table" style="border-color: black;">
                    <thead>
                        <tr>
                            <th name="th_no" class="text-center"><span>No.</span></th>
                            <th name="th_description" class="text-center"><span>DESCRIPTION</span></th>
                            <th name="th_quantity" class="text-center"><span>QTY</span></th>
                            <th name="th_priceunit" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>UNIT PRICE</span></th>
                            <th name="th_subtotal" class="text-center">
                                <span groups="account.group_show_line_subtotals_tax_excluded">TOTAL</span>
                                <span groups="account.group_show_line_subtotals_tax_included">TOTAL</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                    <td class="text-center"><span t-esc="sno"/><t t-set="sno" t-value="sno+1"/></td>
                                    <td class="text-center" name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                    <td class="text-center">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                    </td>
                                    <td t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="line.price_unit"/>
                                    </td>
                                    <td class="text-center o_price_total">
                                        <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99" class="text-center">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-center">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div class="" style="border: 1px solid black;border-top:none;position:relative;bottom:1rem;height:inherit;">

                    <table class="table table-borderless style-sub-table-invoice">
                         
                        <tr class="">
                            <td></td>
                            <td></td>
                            <td></td>      
                            <td class="text-end" style="font-weight:700;color:black;">SUBTOTAL</td>
                            <td class="text-center" style="border-top: none  !important;width:20%;">
                                <span class="" t-field="o.amount_untaxed"/>
                            </td>
                        </tr>
                        <t t-set="tax_totals" t-value="o.tax_totals"/>
                        <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                            <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                                <tr>
                                    <t t-if="tax_totals['display_tax_base']">
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td class="text-end" style="font-weight:700;color:black;">
                                            <span t-esc="amount_by_group['tax_group_name']"/>
                                            <span class="text-nowrap"> on
                                                <t t-esc="amount_by_group['formatted_tax_group_base_amount']"/>
                                            </span>
                                        </td>
                                        <td class="text-center" style="border-top: none  !important;">
                                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td class="text-end" style="font-weight:700;color:black;"><span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/></td>
                                        <td class="text-center" style="border-top: none  !important;">
                                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']" />
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </t>
                        <tr class="">
                            <td></td>
                            <td></td>
                            <td></td>
                            <td class="text-end" style="font-weight:700;color:black;">TOTAL</td>
                            <td class="text-center" style="border-top: none  !important;">
                                <span class="" t-field="o.amount_total"/>
                            </td>
                        </tr>
                    </table>

                    <div class="row">
                        <div class="col-12">
                            <span style="margin-left: 1rem;font-weight:700;font-size:18px;">
                                Total Amount in words: 
                            </span>
                            <span style="margin-left:0.5rem;font-size:18px;" t-esc="o.amount_in_words" />
                        </div>
                    </div>

                    <div class="row" style="border: 1px solid;border:none;">
                        <div class="col-5">
                            <span style="margin-left: 4rem;font-weight:700;font-size:18px;">
                                TAX ID:
                            </span>
                            <span style="margin-left: 0.5rem;font-weight:700;font-size:18px;" t-esc="o.partner_id.vat"/>
                        </div>
                        <div class="col-7">
                            <div style="">
                                <span style="font-weight:700;font-size:18px;">Registration No.:</span>
                                <span style="margin-left: 0.5rem;font-weight:700;font-size:18px;" t-esc="o.name"/>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <span style="font-weight:700;margin-left:1rem;font-size:18px;">
                                Our Bankers Details:
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row" style="border: 1px solid;border-bottom:none;position:relative;bottom:1rem;">
                    <div class="col-6">
                        <span style="font-weight:700;font-size:18px;">
                            Account Name:
                        </span>
                        <span style="margin-left:1rem;font-size:18px;" t-esc="o.add_account_name" />
                    </div>
                </div>

                <table class="table table-sm o_main_table table-borderless style-acc-table-invoice" style="position:relative;bottom:1rem;font-size:18px;" name="invoice_line_table">
                    <thead>
                        <tr>
                            <th name="th_acc_no" class="text-start"><span>Account No.</span></th>
                            <th name="th_curr" class="text-start"><span>Currency</span></th>
                            <th name="th_bank_name" class="text-start"><span>Bank Name</span></th>
                            <th name="th_iban_no" class="text-start"><span>IBAN No.</span></th>
                            <th name="th_swift" class="text-start"><span>Swift</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span t-field="o.add_account_no"/></td>
                            <td><span t-field="o.add_currency"/></td>
                            <td><span t-field="o.add_bank_name"/></td>
                            <td><span t-field="o.add_iban_no"/></td>
                            <td><span t-field="o.add_swift"/></td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
  
    <template id="report_project_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                        t-call="do_invoice_report.report_project_invoice_document" t-lang="lang"/>
            </t>
        </t>
    </template>

    <template id="report_project_invoice_without_payment">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                    t-call="do_invoice_report.report_project_invoice_document" t-lang="lang"/>
            </t>
        </t>
    </template>

</odoo>
