<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="account.account_invoices" model="ir.actions.report">
      <field name="name">Invoices</field>
      <field name="model">account.move</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">do_invoice_report.report_project_invoice</field>
      <field name="report_file">do_invoice_report.report_project_invoice</field>
      <field name="print_report_name">(object._get_report_base_filename())</field>
      <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
      <field name="binding_model_id" ref="account.model_account_move"/>
      <field name="binding_type">report</field>
      <field name="paperformat_id" ref="do_invoice_report.paperformat_invoice_report"/>
      <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),
(4, ref('account.group_account_readonly'))]"/>
    </record>

    <record id="account.account_invoices_without_payment" model="ir.actions.report">
        <field name="name">Invoices without Payment</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">do_invoice_report.report_project_invoice_without_payment</field>
        <field name="report_file">do_invoice_report.report_project_invoice_without_payment</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="do_invoice_report.paperformat_invoice_report"/>
    </record>

  </data>
</odoo>
