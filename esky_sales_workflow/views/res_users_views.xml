<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_users_sales_director_form" model="ir.ui.view">
        <field name="name">res.users.sales.director.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="///div/group/field[@name='partner_id']" position="after">
                <field name="role" attrs="{'invisible': [('share', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>