<odoo>
    <!-- Return Date Wizard Form -->
    <record id="view_return_date_wizard_form" model="ir.ui.view">
        <field name="name">return.date.wizard.form</field>
        <field name="model">return.date.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Return Date">
                <group>
                    <field name="return_date"/>
                </group>
                <footer>
                    <button name="confirm_return" type="object" string="Confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for the Wizard -->
    <record id="action_return_date_wizard" model="ir.actions.act_window">
        <field name="name">Select Return Date</field>
        <field name="res_model">return.date.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
