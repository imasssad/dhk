<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_po_export" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.po.export</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_export_related_po" 
                        string="Export Related POs" 
                        type="object" 
                        class="btn-secondary"
                        attrs="{'invisible': [('state', 'in', ['draft', 'sent', 'cancel'])]}"/>
                
                <button name="action_import_po_prices" 
                        string="Import PO Prices" 
                        type="object" 
                        class="btn-secondary"
                        attrs="{'invisible': [('state', 'in', ['draft', 'sent', 'cancel'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>
