<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_po_price_update_wizard_form" model="ir.ui.view">
        <field name="name">po.price.update.wizard.form</field>
        <field name="model">po.price.update.wizard</field>
        <field name="arch" type="xml">
            <form string="PO Price Update">
                <group>
                    <field name="sale_order_id" readonly="1"/>
                    <field name="action_type" invisible="1"/>
                </group>
                
                <group attrs="{'invisible': [('action_type', '!=', 'export')]}">
                    <group>
                        <field name="excel_file" filename="file_name" attrs="{'invisible': [('excel_file', '=', False)]}"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                </group>
                
                <group attrs="{'invisible': [('action_type', '!=', 'import')]}">
                    <group>
                        <label for="import_file" string="Upload Updated Excel File"/>
                        <field name="import_file" filename="import_file_name" nolabel="1"/>
                        <field name="import_file_name" invisible="1"/>
                    </group>
                    <group>
                        <field name="update_summary" attrs="{'invisible': [('update_summary', '=', False)]}" nolabel="1"/>
                    </group>
                </group>
                
                <footer>
                    <button string="Export PO Lines" 
                            type="object" 
                            name="action_export_po" 
                            class="btn-primary"
                            attrs="{'invisible': [('action_type', '!=', 'export')]}"/>
                    
                    <button string="Download File" 
                            type="object" 
                            name="action_download_template" 
                            class="btn-primary"
                            attrs="{'invisible': ['|', ('action_type', '!=', 'export'), ('excel_file', '=', False)]}"/>
                    
                    <button string="Import &amp; Update" 
                            type="object" 
                            name="action_import_po_prices" 
                            class="btn-primary"
                            attrs="{'invisible': [('action_type', '!=', 'import')]}"/>
                    
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
