<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_pricelist_wizard_form" model="ir.ui.view">
        <field name="name">sale.pricelist.wizard.form</field>
        <field name="model">sale.pricelist.wizard</field>
        <field name="arch" type="xml">
            <form string="Apply Pricelist">
                <sheet>
                    <group>
                        <field name="order_ids" invisible="1"/>
                        <field name="order_count" string="Selected Orders" readonly="1"/>
                        <field name="pricelist_id" options="{'no_create': True}"/>
                        <field name="recompute_prices"/>
                    </group>
                    <div class="alert alert-warning" role="alert">
                        <i class="fa fa-exclamation-triangle"/>
                        <strong>Recompute Prices</strong> is off by default â€” existing unit prices will be kept.
                        Enable it only if you want prices recalculated from the new pricelist.
                    </div>
                    <div class="alert alert-info" role="alert">
                        <i class="fa fa-info-circle"/>
                        Works on orders of <strong>any status</strong> including Cancelled, Waiting for Approval, Confirmed, and Quotations.
                    </div>
                </sheet>
                <footer>
                    <button name="action_apply_pricelist"
                            string="Apply Pricelist"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_pricelist_wizard" model="ir.actions.act_window">
        <field name="name">Apply Pricelist</field>
        <field name="res_model">sale.pricelist.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
