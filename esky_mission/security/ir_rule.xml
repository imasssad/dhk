<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="module_category_mission_management" model="ir.module.category">
            <field name="name">Missions</field>
            <field name="description">Allows you to manage your missions.</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_mission_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="esky_mission.module_category_mission_management"/>
        </record>

        <record id="group_mission_hr_manager" model="res.groups">
            <field name="name">HR Manager</field>
            <field name="category_id" ref="esky_mission.module_category_mission_management"/>
            <field name="implied_ids" eval="[(4, ref('group_mission_manager'))]"/>
        </record>

        <record id="group_mission_admin_manager" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="esky_mission.module_category_mission_management"/>
            <field name="implied_ids" eval="[(4, ref('group_mission_hr_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4, ref('esky_mission.group_mission_manager'))]"/>
        </record>

        <record id="mission_manager_rule" model="ir.rule">
            <field name="name">Mission Manager</field>
            <field name="model_id" ref="esky_mission.model_mission_mission"/>
            <field name="groups" eval="[(4, ref('group_mission_manager'))]"/>
            <field name="domain_force">['|', ('manager_id.user_id', '=', user.id), ('employee_id', '=', user.employee_id.id)]</field>
        </record>

        <record id="mission_hr_manager_rule" model="ir.rule">
            <field name="name">Mission HR Manager</field>
            <field name="model_id" ref="esky_mission.model_mission_mission"/>
            <field name="groups" eval="[(4, ref('group_mission_hr_manager'))]"/>
            <field name="domain_force">[('state', 'in', ('validate1','validate','refuse'))]</field>
        </record>

        <record id="mission_admin_rule" model="ir.rule">
            <field name="name">Admin</field>
            <field name="model_id" ref="esky_mission.model_mission_mission"/>
            <field name="groups" eval="[(4, ref('group_mission_admin_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>
