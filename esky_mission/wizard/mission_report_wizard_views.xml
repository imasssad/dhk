<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mission_report_wizard_form" model="ir.ui.view">
        <field name="name">mission.report.wizard.form</field>
        <field name="model">mission.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Mission Report Wizard">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="department_id"/>
                    <field name="employee_ids" widget="many2many_tags" attrs="{'invisible': [('department_id', '!=', False)], 'required': [('department_id', '=', False)]}"/>
                </group>
                <footer>
                    <button string="Print Excel" type="object" name="print_excel" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mission_report_wizard" model="ir.actions.act_window">
        <field name="name">Employees Report</field>
        <field name="res_model">mission.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_mission_report_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
