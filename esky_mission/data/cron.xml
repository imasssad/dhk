<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Update Mission Status -->
        <record id="ir_cron_mission_state_update" model="ir.cron">
            <field name="name">Cron Job - Update mission to lost if not signin or signout</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="esky_mission.model_mission_mission"/>
            <field name="state">code</field>
            <field name="code">model.update_mission_state()</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Make Mission Description Readonly -->
        <record id="ir_cron_mission_desc_readonly" model="ir.cron">
            <field name="name">Cron Job - Make Description Readonly</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="esky_mission.model_mission_mission"/>
            <field name="state">code</field>
            <field name="code">model.make_description_readonly()</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
