<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_form_import_line" model="ir.ui.view">
        <field name="name">sale.order.view.form.import.line</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_quotation_send" position="before">
                <field name="is_esky" invisible="1"/>
                <field name="can_import_pl_sheet" invisible="1"/>
                <button name="open_import_wizard" string="IMPORT P&amp;L Sheet" class="btn-primary" type="object" attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'sent', 'refused_to_send','refused_to_confirm']),('can_import_pl_sheet','=',False)]}"/>
            </button>
            <page name="customer_signature" position="after">
                <page string="P&amp;L History" name="history" attrs="{'invisible': [('can_import_pl_sheet', '=', False)]}">
                    <field name="attachment_ids">
                        <tree editable="bottom" create="0" delete="0">
                            <field name="create_date" readonly="1" string="Imported on"/>
                            <field name="create_uid" readonly="1" string="Imported by"/>
                            <field name="name" invisible="1"/>
                            <field name="datas" string="File" filename="name" widget="binary" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>
</odoo>
