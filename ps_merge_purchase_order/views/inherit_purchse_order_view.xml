<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="inherit_purchase_order_form_view" model="ir.ui.view">
        <field name="name">inherit.purchase.order.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="is_merge_order"/>
                <field name="merge_user_id" invisible="1"/>
                <field name="merge_purchase_orders" attrs="{'invisible': [('is_merge_order', '=', False)]}" />
                <field name="merge_date" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>