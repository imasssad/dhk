<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_template_approval_to_send" model="mail.template">
        <field name="name">Sales: Approval To Send</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="subject">Submit for Approval To Send Quotation</field>
        <field name="email_from"></field>
        <field name="partner_to"></field>
        <field name="description">Salesperson will ask for approval to send the quotation.</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    <h2>
                        <b>Submit for Approval: <t t-out="object.name"/></b>
                    </h2>
                    <br/>
                    <br/>
                    <p>
                        Dear Approver,
                        <br />
                        <br />
                        This is inform you that quotation is submitted for approval to send.
                        <br />
                        <br />
                        <b>Sales Person: </b><t t-out="object.user_id.name"/>
                        <br />
                        <b>Total Amount: </b><t t-out="format_amount(object.amount_total, object.currency_id)"/>
                        <br />
                        <br />
                        You can use the following link and approve<br /><br />
                        <t t-set="order_link" t-value="'/mail/view?model=sale.order&amp;res_id='+str(object.id)"/>
                        <div style="display: inline-block; margin: 15px; text-align: center">
                            <a t-att-href="order_link" target="_blank"
                                style="padding: 5px 10px; color: #FFFFFF; text-decoration: none; background-color: #875A7B; border: 1px solid #875A7B; border-radius: 3px"
                            >Order Ref: #<t t-out="object.name"/></a>
                        </div><br />
                        Thanks,
                    </p>
                </p>
            </div>
        </field>
        <field name="auto_delete" eval="True"/>
    </record>

